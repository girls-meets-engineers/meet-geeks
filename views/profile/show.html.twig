{% extends "layout.html.twig" %}

{% block title %}Edit Profile{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="/css/profile/show.css">
<link rel="stylesheet" href="/css/header-after.css">
<link rel="stylesheet" href="/css/profile.css">
{% endblock %}

{% block content %}

{% include "header-after.html.twig" %}

<div class="container">
  <div class="col-sm-3"></div>
  <div class="col-sm-6" id="profile-wrapper">
    <h2>Show Profile</h2>
    <div id="profile-header" class="row">
      <div class="col-md-4">
        <img id="user-image" src="{{ user['image_url']|e }}" height="200px" width="200px">
      </div>
      <div class="col-md-8">
        <div id="social-links">
          {% if user['is_engineer'] == true %}
            <a href="{{ user['profile_url']|e }}">
              <img src="/images/github.png" alt="github-icon" height="50px" width="50px">
            </a>
          {% else %}
            <a href="{{ user['profile_url']|e }}">
              <img src="/images/facebook.png" alt="facebook-icon" height="50px" width="50px">
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    <dl>
      <dt>Name</dt>
      <dd>{{ user['name']|e }}</dd>
      <dt>Description</dt>
      <dd>{{ user['description']|e }}</dd>
      <dt>Money</dt>
      {% if user['money']|e %}
      <dd>{{ user['money']|e }} MANYen/Years</dd>
      {% else %}
      <dd>??? MANYen/Years</dd>
      {% endif %}
      <dt>Age</dt>
      {% if user['money']|e %}
      <dd>{{ user['age']|e }} Years old</dd>
      {% else %}
      <dd>??? Years old</dd>
      {% endif %}
    </dl>
    {% if user['id'] == current_user['id'] %}
    <a class="btn btn-danger" href="/profiles/edit">Edit</a>
    {% endif %}
  </div>
  <div class="col-sm-3"></div>
</div>

<div style="width: 100%; height: 50px; background: #000000;">
</div>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="/js/profile/show.js"></script>
{% endblock %}
