{% extends "layout.html.twig" %}

{% block title %}Edit Profile{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="/css/profile/edit.css">
<link rel="stylesheet" href="/css/header-after.css">
<link rel="stylesheet" href="/css/profile.css">
{% endblock %}

{% block content %}

{% include "header-after.html.twig" %}

<div class="container">
  <div class="col-sm-3"></div>
  <div class="col-sm-6" id="profile-wrapper">
    <h2>Edit Profile</h2>
    <div id="profile-header" class="row">
      <div class="col-md-4">
        <img id="user-image" src="{{ current_user['image_url']|e }}" height="200px" width="200px">
      </div>
      <div class="col-md-8">
        <div id="social-links">
          {% if user['is_engineer'] == false %}
            <a href="{{ user['profile_url']|e }}">
              <img src="/images/github.png" alt="github-icon" height="50px" width="50px">
            </a>
          {% else %}
            <a href="{{ user['profile_url']|e }}">
              <img src="/images/facebook.png" alt="facebook-icon" height="50px" width="50px">
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="inputName" value="{{ current_user['name']|e }}">
        </div>
      </div>
      <div class="form-group">
        <label for="inputDescription" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-8">
          <textarea class="form-control" id="inputDescription" rows="10">{{ current_user['description']|e }}</textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="inputMoney" class="col-sm-2 control-label">Money</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="inputMoney" value="{{ current_user['money']|e }}">
        </div>
        <div class="col-sm-2 profile-suffix"><p>MANYen/Year</p></div>
      </div>
      <div class="form-group">
        <label for="inputAge" class="col-sm-2 control-label">Age</label>
        <div class="col-sm-6">
          <input type="text" class="form-control" id="inputAge" value="{{ current_user['age']|e }}">
        </div>
        <div class="col-sm-2 profile-suffix"><p>Years old</p></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="hidden" id="inputId" value="{{ current_user['id']|e }}">
          <button id="edit-apply" class="btn btn-primary">Apply</button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-3"></div>
</div>

<div style="width: 100%; height: 50px; background: #000000;">
</div>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="/js/profile/edit.js"></script>
{% endblock %}
